<%- include('../includes/layout-start') -%>

<h2 class="h_listBooks">Список книг</h2>

<% if(data.books.length === 0) { %>
    <%- include('../includes/components/note') -%>
<% } else { %>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Описание</th>
            <th>Обложка</th>
            <th>Действие</th>
        </tr>
    </thead>

    <% for(const key in data.books) { 
        if (Object.hasOwnProperty.call(data.books, key) && key !== 'length') { %>
            <tr>
                <td><%- data.books[key].title %></td>
                <td><%- data.books[key].authors %></td>
                <td><%- data.books[key].description %></td>
                <td><%- include('../includes/components/image', {fileCover: data.books[key].fileCover }) %></td>
                <td class="action__table">
                    <div class="wrapAction">
                        
                        <a class="action_link" href="/view/<%= data.books[key].id %>">
                            <svg class="svgIcon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free (Icons: CC BY 4.0, Fonts: SIL OFL 1.1, Code: MIT License) Copyright 2023 Fonticons, Inc. --><path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/></svg>
                        </a>
                        <a class="action_link" href="/update/<%= data.books[key].id %>">
                            <svg class="svgIcon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free (Icons: CC BY 4.0, Fonts: SIL OFL 1.1, Code: MIT License) Copyright 2023 Fonticons, Inc. --><path d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z"/></svg>
                        </a>

                        <%- include('../includes/components/formDel', {id: data.books[key].id}) %>
                        
                    </div>
                </td>
            </tr>

    <% }} %>
</table>

<% } %>

<%- include('../includes/layout-end')%>